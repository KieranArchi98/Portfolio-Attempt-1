{
  "meta": {
    "name": "default-modern-ui",
    "version": "1.0.0",
    "philosophy": [
      "system-first-design",
      "token-driven-styling",
      "layout-over-decoration",
      "whitespace-and-hierarchy"
    ]
  },

  "layout": {
    "container": {
      "maxWidth": {
        "sm": "640px",
        "md": "768px",
        "lg": "1024px",
        "xl": "1280px",
        "2xl": "1440px"
      },
      "padding": {
        "mobile": "16px",
        "tablet": "24px",
        "desktop": "32px"
      }
    },
    "grid": {
      "type": "12-column",
      "gap": "24px",
      "align": "center"
    },
    "sections": {
      "verticalSpacing": {
        "sm": "48px",
        "md": "72px",
        "lg": "96px",
        "xl": "128px"
      }
    }
  },

  "spacing": {
    "scale": {
      "0": "0px",
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "24px",
      "xl": "32px",
      "2xl": "48px",
      "3xl": "64px",
      "4xl": "96px"
    },
    "rules": {
      "componentPadding": "md",
      "stackSpacing": "lg",
      "sectionSpacing": "xl"
    }
  },

  "typography": {
    "fonts": {
      "primary": "Inter, system-ui, sans-serif",
      "secondary": "Inter, system-ui, sans-serif",
      "mono": "JetBrains Mono, monospace"
    },
    "scale": {
      "display": { "size": "48px", "lineHeight": "1.1", "weight": 700 },
      "h1": { "size": "36px", "lineHeight": "1.2", "weight": 600 },
      "h2": { "size": "30px", "lineHeight": "1.25", "weight": 600 },
      "h3": { "size": "24px", "lineHeight": "1.3", "weight": 600 },
      "h4": { "size": "20px", "lineHeight": "1.35", "weight": 500 },
      "body": { "size": "16px", "lineHeight": "1.6", "weight": 400 },
      "small": { "size": "14px", "lineHeight": "1.5", "weight": 400 },
      "muted": { "size": "14px", "lineHeight": "1.5", "weight": 400 }
    },
    "rules": {
      "maxLineLength": "65ch",
      "paragraphSpacing": "md"
    }
  },

  "colors": {
    "mode": "light",
    "background": {
      "primary": "#ffffff",
      "secondary": "#f9fafb",
      "muted": "#f3f4f6"
    },
    "foreground": {
      "primary": "#0f172a",
      "secondary": "#334155",
      "muted": "#64748b"
    },
    "border": {
      "default": "#e5e7eb",
      "muted": "#f1f5f9"
    },
    "brand": {
      "primary": "#2563eb",
      "primaryHover": "#1d4ed8",
      "primarySubtle": "#eff6ff"
    },
    "semantic": {
      "success": "#16a34a",
      "warning": "#d97706",
      "error": "#dc2626",
      "info": "#0284c7"
    }
  },

  "surface": {
    "radius": {
      "none": "0px",
      "sm": "4px",
      "md": "8px",
      "lg": "12px",
      "xl": "16px",
      "2xl": "24px",
      "full": "9999px"
    },
    "shadow": {
      "none": "none",
      "sm": "0 1px 2px rgba(0,0,0,0.05)",
      "md": "0 4px 8px rgba(0,0,0,0.08)",
      "lg": "0 10px 20px rgba(0,0,0,0.10)",
      "xl": "0 20px 40px rgba(0,0,0,0.12)"
    }
  },

  "components": {
    "button": {
      "sizes": {
        "sm": "32px",
        "md": "40px",
        "lg": "48px"
      },
      "variants": ["primary", "secondary", "ghost", "destructive"],
      "radius": "md"
    },
    "input": {
      "height": "40px",
      "radius": "md",
      "border": "default",
      "focusRing": "primary"
    },
    "card": {
      "padding": "lg",
      "radius": "lg",
      "surface": "background.secondary",
      "border": true
    }
  },

  "icons": {
    "library": "lucide-react",
    "defaultSize": "20px",
    "strokeWidth": 1.75
  },

  "motion": {
    "duration": {
      "fast": "150ms",
      "normal": "250ms",
      "slow": "400ms"
    },
    "easing": "cubic-bezier(0.4, 0, 0.2, 1)",
    "rules": {
      "hover": true,
      "reducedMotionSupport": true
    }
  },

  "responsive": {
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px",
      "2xl": "1440px"
    },
    "behavior": {
      "stackOnMobile": true,
      "collapseNavigation": true
    }
  },

  "tone": {
    "density": "comfortable",
    "style": "neutral-modern",
    "personality": ["clean", "technical", "calm", "professional"]
  },

  "accessibility": {
    "focusVisible": true,
    "contrastTarget": "WCAG-AA",
    "keyboardNavigation": true,
    "ariaDefaults": true
  },

  "tooling": {
    "framework": "nextjs",
    "styling": "tailwindcss",
    "components": "shadcn-ui",
    "icons": "lucide",
    "animation": "framer-motion"
  }
}
