{
  "framework": "nextjs-app-router",
  "root": {
    "app": {
      "description": "Top-level app folder using Next.js App Router",
      "routeGroups": {
        "(marketing)": {
          "description": "Public marketing pages",
          "layout": "marketing-layout",
          "pages": {
            "page.tsx": "home page",
            "product": {
              "page.tsx": "product page"
            },
            "pricing": {
              "page.tsx": "pricing page"
            },
            "docs": {
              "layout.tsx": "docs layout (sidebar)",
              "page.tsx": "docs landing",
              "introduction": {
                "page.tsx": "docs introduction"
              },
              "installation": {
                "page.tsx": "docs installation"
              },
              "usage": {
                "page.tsx": "docs usage"
              },
              "api": {
                "page.tsx": "docs api reference"
              }
            },
            "blog": {
              "page.tsx": "blog landing",
              "[slug]": {
                "page.tsx": "individual blog post"
              }
            }
          }
        },

        "(app)": {
          "description": "Authenticated web app pages",
          "layout": "app-layout",
          "pages": {
            "dashboard": {
              "page.tsx": "user dashboard"
            },
            "projects": {
              "page.tsx": "projects listing"
            },
            "settings": {
              "page.tsx": "user settings"
            }
          }
        },

        "(auth)": {
          "description": "Authentication pages",
          "layout": "centered-layout",
          "pages": {
            "login": {
              "page.tsx": "login page"
            },
            "signup": {
              "page.tsx": "signup page"
            }
          }
        },

        "(legal)": {
          "description": "Legal and utility pages",
          "layout": "centered-layout",
          "pages": {
            "terms": {
              "page.tsx": "terms of service"
            },
            "privacy": {
              "page.tsx": "privacy policy"
            },
            "404": {
              "page.tsx": "error page"
            }
          }
        }
      },
      "sharedComponents": {
        "layout": {
          "Header.tsx": "persistent header",
          "Footer.tsx": "persistent footer",
          "Sidebar.tsx": "optional sidebar for app/docs"
        },
        "sections": {
          "Hero.tsx": "hero section",
          "FeatureGrid.tsx": "feature grid section",
          "PricingTable.tsx": "pricing table section",
          "CTA.tsx": "call to action section",
          "ContentBlock.tsx": "generic content section"
        },
        "ui": {
          "Button.tsx": "atomic button",
          "Card.tsx": "atomic card",
          "Input.tsx": "atomic input field",
          "Icon.tsx": "atomic icon component",
          "List.tsx": "atomic list component",
          "Image.tsx": "atomic image component"
        }
      },
      "assets": {
        "images": "all static images",
        "icons": "svg/icons",
        "fonts": "custom fonts"
      },
      "styles": {
        "globals.css": "global styles and Tailwind config",
        "tokens.css": "CSS variables for design system"
      }
    }
  }
}
