{
  "meta": {
    "name": "default-modern-ux",
    "version": "1.0.0",
    "principles": [
      "clarity-over-cleverness",
      "motion-supports-intent",
      "feedback-on-every-action",
      "progressive-disclosure",
      "fast-feels-better-than-fancy"
    ]
  },

  "interactionModel": {
    "inputFeedback": "immediate",
    "systemFeedback": "always-visible",
    "errorPrevention": "prefer-prevent-over-explain",
    "undoPreferred": true
  },

  "motion": {
    "enableMotion": true,
    "reducedMotion": {
      "respectSystemPreference": true,
      "fallback": "fade"
    },

    "durations": {
      "instant": "0ms",
      "fast": "120ms",
      "normal": "220ms",
      "slow": "360ms"
    },

    "easing": {
      "standard": "cubic-bezier(0.4, 0, 0.2, 1)",
      "entrance": "cubic-bezier(0.0, 0, 0.2, 1)",
      "exit": "cubic-bezier(0.4, 0, 1, 1)"
    }
  },

  "transitions": {
    "hover": {
      "properties": ["background-color", "color", "border-color", "box-shadow"],
      "duration": "fast",
      "easing": "standard"
    },

    "focus": {
      "style": "ring",
      "duration": "fast",
      "easing": "standard"
    },

    "active": {
      "scale": 0.98,
      "duration": "instant"
    }
  },

  "microInteractions": {
    "buttons": {
      "hover": {
        "effect": "subtle-elevation"
      },
      "active": {
        "effect": "press"
      },
      "loading": {
        "state": "spinner-inline",
        "disableInteraction": true
      }
    },

    "inputs": {
      "focus": {
        "effect": "highlight-border"
      },
      "error": {
        "effect": "color-shift",
        "messagePlacement": "below"
      },
      "success": {
        "effect": "color-confirmation"
      }
    },

    "toggles": {
      "animation": "slide",
      "duration": "fast"
    }
  },

  "pageTransitions": {
    "enabled": true,
    "type": "fade-slide",
    "duration": "normal",
    "preserveScroll": false
  },

  "loadingStates": {
    "global": {
      "type": "spinner",
      "delay": "200ms"
    },

    "section": {
      "type": "skeleton",
      "animate": true
    },

    "button": {
      "type": "spinner-inline"
    }
  },

  "feedback": {
    "success": {
      "presentation": "toast",
      "duration": "3000ms"
    },

    "error": {
      "presentation": "inline-or-toast",
      "persistUntilDismissed": true
    },

    "info": {
      "presentation": "toast",
      "duration": "4000ms"
    }
  },

  "modalsAndOverlays": {
    "backdrop": {
      "type": "blur-and-dim",
      "dismissOnClickOutside": true
    },

    "animation": {
      "entrance": "scale-fade",
      "exit": "fade",
      "duration": "normal"
    },

    "focusTrap": true,
    "scrollLock": true
  },

  "navigationUX": {
    "activeState": {
      "indication": "color-and-weight"
    },

    "hoverState": {
      "indication": "background-highlight"
    },

    "mobile": {
      "menuType": "slide-over",
      "dismissGesture": "swipe"
    }
  },

  "contentUX": {
    "progressiveDisclosure": {
      "enabled": true,
      "patterns": ["accordion", "tabs", "expand-collapse"]
    },

    "emptyStates": {
      "includeGuidance": true,
      "includeCTA": true
    },

    "denseInformation": {
      "useTooltips": true,
      "useDisclosure": true
    }
  },

  "accessibilityUX": {
    "focusVisible": true,
    "keyboardNavigation": true,
    "ariaLiveRegions": true,
    "motionSafeFallbacks": true
  },

  "qualityGuards": {
    "avoidMotionForDecorationOnly": true,
    "avoidBlockingAnimations": true,
    "avoidUnexpectedLayoutShift": true
  }
}
